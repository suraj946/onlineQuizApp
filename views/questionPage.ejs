<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="css/questionPage.css">
<script defer src="scripts/jquery.js"></script>
<script defer src="scripts/questionPageScript.js"></script>

<button type="button" class="btn btn-primary modal-btn" id="modalBoxOpen" data-bs-toggle="modal" data-bs-target="#exampleModal"></button>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Update Question</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="modalForm">
                    <div class="mb-3">
                        <input type="hidden" class="form-control" id="storeQuesId" name="id">
                    </div>
                    <div class="mb-3">
                      <label for="updateQuestion" class="form-label">Question</label>
                      <input type="text" class="form-control" id="updateQuestion" name="question">
                    </div>
                    <div class="mb-3">
                      <label for="updateOptions" class="form-label">Options</label>         
                      <input type="text" class="form-control" id="updateOptions" name="options">
                    </div>
                    <div class="mb-3">
                      <label for="updateAnswer" class="form-label">Answer</label>
                      <input type="text" class="form-control" id="updateAnswer" name="answer">
                    </div>
                  </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="modalBoxClose" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="updateApiAndDom" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="message"></div>
<div class="pageContent">
    <div class="addQuestionSec">
        <form id="addQuestionForm">
            <div class="formElement">
                <label for="questionInp">Enter question here</label>
                <input type="text" id="questionInp" name="question" placeholder="Enter question*">
            </div>
            <div class="formElement">
                <label for="optionInp">Enter options comma(,) seperated</label>
                <input type="text" id="optionInp" name="options" placeholder="Enter options*">
            </div>
            <div class="formElement">
                <label for="answerInp">Enter answer here</label>
                <input type="text" id="answerInp" name="answer" placeholder="Enter answer*">
            </div>
        </form>
        <button class="addBtn myBtn" id="addQuestionBtn">Add Question</button>
    </div>
    <div class="questionTable">
        <table>
            <tbody id="tableBody">
                <tr>
                    <th>SN</th>
                    <th>Question Id</th>
                    <th>Questions</th>
                    <th>Options</th>
                    <th>Answer</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                <% data.forEach((elem, i)=>{ %>
                    <tr id="tr-id-<%=elem.questionId%>">
                        <td><%=i+1%></td>
                        <td class="forUpdate"><%=elem.questionId%></td>
                        <td class="forUpdate"><%=elem.questions%></td>
                        <td class="forUpdate"><%=elem.options%></td>
                        <td class="forUpdate"><%=elem.answer%></d>
                        <td><button class="editBtn myBtn" id="edit-<%=elem.questionId%>" qId="<%=elem.questionId%>">Edit Question</button></td>
                        <td><button class="deleteBtn myBtn" id="delete-<%=elem.questionId%>" qId="<%=elem.questionId%>">Delete</button></td>   
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
